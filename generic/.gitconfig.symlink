[alias]
	uncommit = reset --soft HEAD^
[user]
	email = thewisenerd@protonmail.com
	name = thewisenerd
[color]
	ui = auto
[commit]
	gpgsign = true
[core]
	autocrlf = input
	safecrlf = false
	pager = less -x1,9
	editor = nano -r 72
	excludesfile = /home/thewisenerd/.gitignore.global
[fetch]
	output = compact
[receive]
	denyCurrentBranch = warn
[include]
	path = ~/.gitconfig.local
[pull]
	ff = only
